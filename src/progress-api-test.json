{
  "info": {
    "name": "Progress Service API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Progress Endpoints",
      "item": [
        {
          "name": "Get Initial Progress",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/progress/{{enrollment_id}}",
              "host": ["{{base_url}}"],
              "path": ["progress", "{{enrollment_id}}"]
            },
            "description": "Lấy thông tin tiến trình học tập của một enrollment cụ thể"
          },
          "response": []
        },
        {
          "name": "Update Progress",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/progress/{{enrollment_id}}",
              "host": ["{{base_url}}"],
              "path": ["progress", "{{enrollment_id}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"progress\": 75,\n    \"currentLesson\": \"LESSON-123\",\n    \"lessonId\": \"LESSON-123\",\n    \"isLessonCompleted\": true\n}"
            },
            "description": "Cập nhật tiến trình học tập của một enrollment"
          },
          "response": []
        },
        {
          "name": "Get Overall Progress",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/progress/overall/{{enrollment_id}}",
              "host": ["{{base_url}}"],
              "path": ["progress", "overall", "{{enrollment_id}}"]
            },
            "description": "Lấy thông tin tổng quan về tiến trình học tập"
          },
          "response": []
        },
        {
          "name": "Verify Course Completion",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/progress/completion/{{enrollment_id}}",
              "host": ["{{base_url}}"],
              "path": ["progress", "completion", "{{enrollment_id}}"]
            },
            "description": "Kiểm tra xem một khóa học đã được hoàn thành chưa"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3003/api/v1"
    },
    {
      "key": "enrollment_id",
      "value": "REPLACE_WITH_ACTUAL_ENROLLMENT_ID"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test(\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test(\"Response time is less than 500ms\", function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(500);",
          "});",
          "",
          "pm.test(\"Response has JSON body\", function () {",
          "    pm.response.to.be.json;",
          "});"
        ]
      }
    }
  ]
}
